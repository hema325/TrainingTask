@model AddClientViewModel

@{
    ViewData["Title"] = "Add";
}


<div class="card">
  <div class="card-body">
    <h4 class="card-title">Client Form</h4>
    <p class="card-description"> Adding Client </p>
    <form class="forms-sample" asp-action="Add">
      <div class="form-group row">
        <label asp-for="Name" class="col-sm-3 col-form-label"></label>
        <div class="col-sm-9">
          <input asp-for="Name" type="text" class="form-control" placeholder="Name">
          <span asp-validation-for="Name" class="text-danger"></span>  
        </div>
      </div>
      <div class="form-group row">
        <label asp-for = "Phone" class="col-sm-3 col-form-label"></label>
        <div class="col-sm-9">
          <input  asp-for = "Phone" type="text" class="form-control"placeholder="Notes">
          <span asp-validation-for="Phone" class="text-danger"></span>
        </div>  
      </div>
      <div class="form-group row">
        <label asp-for = "Address" class="col-sm-3 col-form-label"></label>
        <div class="col-sm-9">
          <input  asp-for = "Address" type="text" class="form-control"placeholder="Notes">
          <span asp-validation-for="Address" class="text-danger"></span>
        </div>  
      </div>
      <button type="submit" class="btn btn-gradient-primary me-2">Submit</button>
    </form>
  </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}


