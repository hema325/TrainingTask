@model SalesReportViewModel
@{
    ViewData["Title"] = "Index";
}

<div class="card">
  <div class="card-body">
     <h4 class="card-title">Sales Reports</h4>
     <p class="card-description"> Showing Sales Reports
    <form class="forms-sample" asp-action="Add">
      <div class="form-group row">
        <label asp-for="From" class="col-sm-3 col-form-label"></label>
        <div class="col-sm-9">
          <input asp-for="From" type="date" class="form-control" placeholder="From">
          <span asp-validation-for="From" class="text-danger"></span>  
        </div>
      </div>
      <div class="form-group row">
        <label asp-for = "To" class="col-sm-3 col-form-label"></label>
        <div class="col-sm-9">
          <input  asp-for = "To" type="date" class="form-control"placeholder="To">
          <span asp-validation-for="To" class="text-danger"></span>
        </div>  
      </div>
      <div class="float-end">
        <button id="show" type="submit" class="btn btn-gradient-primary me-2">Show</button>
      </div>
    </form>
  </div>
</div>
<br/>
<div class="card">
  <div class="card-body">
     <h4 class="card-title">Filtered Sales Reports</h4>
     <p class="card-description"> Showing Sales Reports
     </p>
     <table class="table">
       <thead>
         <tr>
           <th>Number</th>
           <th>Client Name</th>
           <th>Item Name</th>
           <th>Date</th>
           <th>Price</th>
           <th>Quantity</th>
           <th>Total</th>
           <th>Discount</th>
           <th>The Net</th>
           <th>Paid Up</th>
           <th>The Rest</th>
         </tr>
       </thead>
       <tbody>
       </tbody>
     </table>
     <partial name="LoaderPartial" />
   </div>
</div>
<br />
<div class="card">
  <div class="card-body">
     <div class="d-flex justify-content-center align-content-center gap-2">
         <button id="prev" class="btn btn-outline-primary p-3 d-none">Prev</button>
         <button id="next" class="btn btn-outline-primary p-3 d-none">Next</button>
     </div>
   </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/salesReportsIndex.js"></script>
}

